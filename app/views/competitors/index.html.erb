<% provide(:title, "Leaderboard") %>

<h1>Leaderboard</h1>

<table id="leaderboard">
	<tr>
		<th><%= sortable "name" %></th>
		<th><%= sortable "score" %></th>
	</tr>
	<% @competitors.each do |competitor| %>
	<tr>
		<td><%= link_to competitor.name, showcompetitor_path(id: competitor.id)  %></td>
		<td><%= competitor.score.to_s %></td>
	</tr>
	<% end %>
</table>