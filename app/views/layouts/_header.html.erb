<header class="navbar navbar-fixed-top navbar-inverse">
	<div class="container">
		<%= link_to "Leaderboard", root_path, id: "logo" %>
		<nav>
			<ul class="nav navbar-nav navbar-right">
				<li class="dropdown">
					<a href='#' class="dropdown-toggle" data-toggle="dropdown">View <b class="caret"></b></a>
					<ul class="dropdown-menu">
						<li><%= link_to "Competitors", root_path %></li>
						<li><%= link_to "Medals", medals_path %></li>
						<li><%= link_to "Tournaments", tournaments_path %></li>
					</ul>
				</li>
				<% if logged_in? %>
					<li class="dropdown">
						<a href='#' class="dropdown-toggle" data-toggle="dropdown">Add <b class="caret"></b></a>
						<ul class="dropdown-menu">
							<li><%= link_to "Tournament", addtournament_path %></li>
							<li><%= link_to "Competitor", addcompetitor_path %></li>
							<li><%= link_to "Medal", addmedal_path %></li>
						</ul>
					</li>
					<li><%= link_to "Log out", logout_path, method: "delete" %></li>
				<% else %>
					<li><%= link_to "Log in", login_path %></li>
				<% end %>
			</ul>
		</nav>
	</div>
</header>